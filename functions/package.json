    "format": "npx biome format --write src"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "firebase-functions-test": "^3.2.0",
    "prettier": "^3.4.2",
    "typescript": "^5.4.5"
  }
}
